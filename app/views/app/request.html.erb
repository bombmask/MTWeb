
<% provide(:title, "Truth Bot") %>

<div class="panel panel-default">
  <div class="progress">
  	<div id="request-progress" class="progress-bar" style="width: 0%"></div>
  </div>

  <div id="searchcontainer">
    <center>
      <form class="form-group form-inline" action="javascript:request_user();">
        <div class="input-group">
          <input id="search-text" class="form-control" placeholder="Username" type="text">
          <span class="input-group-btn">
            <button id="searchbutton" type="submit" class="btn btn-default">Request</button>
          </span>
        </div>
      </form>
    </center>
  </div>
  <div id="twitch-info" class="panel panel-info">
    <div class="row">
      <div class="col-md-6">      
        <p id="twitch-displayname"></p>
        <p id="twitch-name"></p>
        <p id="twitch-usertype"></p>
        <p id="twitch-age"></p>
        <p id="twitch-message-count"></p>
      </div>
      <div class="col-md-6">
        <div id="twitch-logo"></div>
      </div>
    </div>
  </div>
  <div id="resultscontainer">
    <table id="data-table" class="table table-striped table-hover"></table>
  </div>
</div>

