<!DOCTYPE html>
<html>
<head>
	<title><%= yield :title %></title>
	<%= stylesheet_link_tag    'application', media: 'all' %>
	<%= javascript_include_tag 'application' %>
	<%= csrf_meta_tags %>
	<%= favicon_link_tag %>
</head>
<body>
	<%= render "layouts/navbar" %>

	<div class="container">
		<% flash.each do |key, value| %>
			<div class="alert alert-<%= key %>"><%= value %></div>
		<% end %>
		<%= yield %>
	</div>
	

	<%= render "layouts/footer" %>
</body>
</html>
